@using Guestbook.Models
@model GuestbookEntry
@{
    ViewBag.Title = "Show";
}

<h2>Show GuestBook Entry</h2>

<dl>
    <dt>Name:</dt>
    <dd>@Model.Name</dd>
    <dt>Date Added:</dt>
    <dd>@Model.DateAdded</dd>
    <dt>Message:</dt>
    <dd>@Model.Message</dd>
</dl>

<p>
    @if (ViewBag.HasPermission)
    {
     @Html.ActionLink("Edit", "Edit", new {id = Model.Id})
    }
    <br/>
    @Html.ActionLink("Back to Entries", "Index")
</p>